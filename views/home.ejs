<!DOCTYPE html>
<html lang="en">
    <head>
        <base href="../">
        <title>Khoa Pham</title>
        <style>
            hr {
                visibility: hidden;
            }
            .div-control {
                display: flex;
                width: 300px;
                justify-content: space-between
            }
        </style>
        <script src="jquery.js"></script>
    </head>
    <body>
        <div>
            <h3><%= girl.name %></h3>
            <div class="div-control">
                <a href="#" id="a-next">Trở lại</a>
                <a href="#" id="a-pre">Tiếp</a>
            </div>
            <hr />
            <img src="<%= girl.image %>" alt="" width="300px">
            <hr />
            <div class="div-control">
                <a href="/like/<%= girl.id %>" id="a-like"><%= girl.like %> Like</a>
                <a href="#"><%= girl.dislike %> Dislike</a>
            </div>
        </div>
    </body>
    <script>
        const id = '<%= girl.id %>';

        $('#a-like').click((e) => {
            e.preventDefault();
            $.get('/xlike/' + id, likeNumber => $('#a-like').text(likeNumber + ' Like'));
        });

        $('#a-next').click((e) => {
            e.preventDefault();
            $.get('/api/hotgirl/' + (+id + 1), x => console.log(x));
        });

        $('#a-pre').click((e) => {
            e.preventDefault();
        });
    </script>
</html>
